{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 300,
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/yaakovj/fit3179/refs/heads/main/data/Anomaly_Surface_Temp.csv"
  },
  "autosize": { "type": "fit", "contains": "padding" },
  "title": {
    "text": "Trend in Australian Average Surface Temperature",
    "subtitle": "Temperature anomalies relative to a 1971–2000 monthly climatology",
    "font": "Arial",
    "fontSize": 18,
    "subtitleFontSize": 14,
    "subtitleFont": "Arial"
  },
  "layer": [
    {
      "transform": [
        { "calculate": "'Avg. Temp'", "as": "Type" }
      ],
      "mark": "line",
      "encoding": {
        "x": { "field": "Year", "type": "temporal", "axis": { "tickCount": 10, "titleFont": "Arial", "titleFontSize": 14, "labelFont": "Arial", "labelFontSize": 12 } },
        "y": { "field": "Average Temp", "type": "quantitative", "axis": { "title": "Temperature Anomaly (°C)", "titleFont": "Arial", "titleFontSize": 14, "labelFont": "Arial", "labelFontSize": 12 } },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["Avg. Temp", "Trendline"],
            "range": ["#4682b4", "#dc143c"]
          },
          "legend": { "title": null, "labelFont": "Arial", "labelFontSize": 12, "titleFont": "Arial", "titleFontSize": 14 }
        }
      }
    },
    {
      "transform": [
        { "calculate": "'Trendline'", "as": "Type" }
      ],
      "mark": {
        "type": "line"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": { "titleFont": "Arial", "titleFontSize": 14, "labelFont": "Arial", "labelFontSize": 12 }
        },
        "y": {
          "field": "Trendline",
          "type": "quantitative",
          "axis": { "titleFont": "Arial", "titleFontSize": 14, "labelFont": "Arial", "labelFontSize": 12 }
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["Avg. Temp", "Trendline"],
            "range": ["#4682b4", "#dc143c"]
          },
          "legend": null
        }
      }
    },
    {
      "transform": [{ "filter": "year(datum.Year) == 2024" }],
      "mark": {
        "type": "rule",        // thin line acting as an arrow
        "strokeWidth": 1,
        "color": "black"
      },
      "encoding": {
        "x": { "field": "Year", "type": "temporal" },
        "x2": { "datum": "2023" },   // where the arrow points *from*
        "y": { "field": "Average Temp", "type": "quantitative" },
        "y2": { "datum": 0.9 }             // small vertical offset if needed
      }
    },
    {
      "transform": [{ "filter": "year(datum.Year) == 2024" }],
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -60,
        "dy": -18,
        "font": "Arial",
        "fontSize": 12
      },
      "encoding": {
        "x": { "field": "Year", "type": "temporal" },
        "y": { "field": "Average Temp", "type": "quantitative" },
        "text": { "value": "Hottest year on record (2024)" }
      }
    }
  ],
  "config": {
    "view": { "stroke": null }
  }
}
