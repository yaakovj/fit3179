{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yaakovj/fit3179/refs/heads/main/data/Energy%20consumption%20by%20fuel.csv"
  },
  "height": 400,
  "width": 500,
  "background": "transparent",
    "title": {
    "text": "Australian Energy Generation By Fuel Type",
    "font": "Arial",
    "fontSize": 18
  },
  "transform": [
    {
      "fold": [
        "Black coal",
        "Brown coal",
        "Natural gas",
        "Renewables",
        "Oil products"
      ],
      "as": ["Source", "Share"]
    }
  ],
  "layer": [{"mark": "bar",
  "encoding": {
    "x": {
      "field": "Years",
      "type": "ordinal",
      "axis": {
        "title": "Year",
        "labelAngle": 0,
        "labelFont": "Arial",
        "labelFontSize": 12,
        "titleFont": "Arial",
        "titleFontSize": 14
      }
    },
    "y": {
      "field": "Share",
      "type": "quantitative",
      "scale": { "domain": [0, 100] },
      "axis": {
        "title": "Percentage Share",
        "labelFont": "Arial",
        "labelFontSize": 12,
        "titleFont": "Arial",
        "titleFontSize": 14
      }
    },
    "color": {
      "field": "Source",
      "type": "nominal",
      "scale": {
        "domain": ["Black coal", "Brown coal", "Natural gas", "Oil products", "Renewables"],
        "range": ["#4682b4", "#cd853f", "#ff4040", "#87cefa", "#228b22"]
      },
      "legend": {
        "title": "Energy Source",
        "labelFont": "Arial",
        "labelFontSize": 12,
        "titleFont": "Arial",
        "titleFontSize": 14,
        "orient": "none",
        "legendX":518,
        "legendY":300
      }
    }
  }},
  
    {
      "mark": "bar",
      "data": { "values": [{ "y": 82 }] },
      "mark": { "type": "rule", "strokeDash": [4, 4], "color": "#000000", "strokeWidth": 2 },
      "encoding": {
        "y": { "field": "y", "type": "quantitative" }
      }
    },
    {
      "data": { "values": [{ "y": 82, "text": "2030 Target: 82%", "x": "2023-24" }] },
      "mark": { "type": "text", "align": "right", "dx": 210, "dy": 0, "font": "Arial", "fontSize": 12 },
      "encoding": {
        "x": { "field": "x", "type": "ordinal" },
        "y": { "field": "y", "type": "quantitative" },
        "text": { "field": "text" }
      }
    }
  ],
  "config": {
    "view": { "stroke": null }
  }
}
